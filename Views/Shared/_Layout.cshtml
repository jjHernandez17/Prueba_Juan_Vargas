<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Hospital System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .bg-purple {
            background-color: #6f42c1 !important;
        }
        .btn-purple {
            background-color: #6f42c1;
            color: white;
        }
        .btn-purple:hover {
            background-color: #5b36a3;
            color: white;
        }
    </style>
</head>
<body class="d-flex">
<!-- Sidebar -->
<div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark bg-purple" style="width: 250px; min-height: 100vh;">
    <a href="/" class="d-flex align-items-center mb-3 text-white text-decoration-none">
        <span class="fs-4">🏥 Hospital</span>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
            <a asp-controller="Home" asp-action="Index" class="nav-link text-white">Inicio</a>
        </li>
        <li>
            <a asp-controller="Doctor" asp-action="Index" class="nav-link text-white">️Medicos</a>
        </li>
        <li>
            <a asp-controller="Patient" asp-action="Index" class="nav-link text-white">Pacientes</a>
        </li>
        <li>
            <a asp-controller="Appointment" asp-action="Index" class="nav-link text-white">Citas</a>
        </li>
    </ul>
</div>

<!-- Main Content -->
<div class="flex-grow-1 p-4">
    @RenderBody()
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>