@{
    ViewData["Title"] = "Hospital San Vicente";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Hospital San Vicente</h1>
        <p class="lead text-muted mx-auto" style="max-width: 700px;">
            Sistema de gestión del Hospital San Vicente.  
            Nuestra misión es ofrecer atención médica de calidad, con eficiencia y tecnología, 
            facilitando la administración de pacientes, doctores y citas médicas en un entorno digital seguro y accesible.
        </p>
    </div>

    <div class="row justify-content-center text-center">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-purple fw-bold">Médicos</h5>
                    <p class="card-text text-muted">Gestiona el registro, especialidades y disponibilidad de los médicos del hospital.</p>
                    <a href="#" class="btn btn-purple w-100">Ver médicos</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-purple fw-bold"> Pacientes</h5>
                    <p class="card-text text-muted">Administra los datos personales, historiales y citas de los pacientes registrados.</p>
                    <a href="#" class="btn btn-purple w-100">Ver pacientes</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-purple fw-bold"> Citas Médicas</h5>
                    <p class="card-text text-muted">Agenda y controla citas médicas evitando conflictos de horarios y duplicidades.</p>
                    <a href="#" class="btn btn-purple w-100">Ver citas</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-purple {
        color: #6f42c1;
    }
    .btn-purple {
        background-color: #6f42c1;
        color: #fff;
    }
    .btn-purple:hover {
        background-color: #5b36a3;
        color: #fff;
    }
</style>
