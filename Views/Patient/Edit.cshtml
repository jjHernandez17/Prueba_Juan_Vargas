@model JuanJoseVargas.Models.Patient

@{
    ViewData["Title"] = "Editar Paciente";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow border-0">
                <div class="card-header text-white bg-primary">
                    <h4 class="mb-0">✏️ Editar Información del Paciente</h4>
                </div>
                <div class="card-body">
                    
                    <form asp-action="Edit" method="post">
                       
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold">Nombre completo</label>
                            <input asp-for="FullName" class="form-control" placeholder="Ej: María López" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Document" class="form-label fw-semibold">Documento</label>
                            <input asp-for="Document" class="form-control" placeholder="Ej: 123456789" />
                            <span asp-validation-for="Document" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Age" class="form-label fw-semibold">Edad</label>
                            <input asp-for="Age" class="form-control" type="number" min="0" max="120" placeholder="Ej: 35" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-semibold">Teléfono</label>
                            <input asp-for="Phone" class="form-control" placeholder="Ej: 3105551234" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">Correo electrónico</label>
                            <input asp-for="Email" class="form-control" placeholder="Ej: maria@hospital.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
                            <button type="submit" class="btn btn-primary"> Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    .bg-primary {
        background-color: #0d6efd !important;
    }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
        color: #fff;
        transition: 0.2s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
        transform: translateY(-1px);
        color: #fff;
    }

    .card {
        border-radius: 0.75rem;
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.15rem rgba(13, 110, 253, 0.25);
    }
</style>

