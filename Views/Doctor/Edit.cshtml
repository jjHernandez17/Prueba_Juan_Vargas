@model JuanJoseVargas.Models.Doctor

@{
ViewData["Title"] = "Editar Doctor";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow border-0">
                <div class="card-header text-white bg-purple">
                    <h4 class="mb-0">‚úèÔ∏è Editar Informaci√≥n del Doctor</h4>
                </div>
                <div class="card-body">
                    
                    <form asp-action="Edit" method="post">
                        
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold">Nombre completo</label>
                            <input asp-for="FullName" class="form-control" placeholder="Ej: Dr. Juan P√©rez" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Document" class="form-label fw-semibold">Documento</label>
                            <input asp-for="Document" class="form-control" placeholder="Ej: 123456789" />
                            <span asp-validation-for="Document" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Specialty" class="form-label fw-semibold">Especialidad</label>
                            <input asp-for="Specialty" class="form-control" placeholder="Ej: Cardiolog√≠a" />
                            <span asp-validation-for="Specialty" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-semibold">Tel√©fono</label>
                            <input asp-for="Phone" class="form-control" placeholder="Ej: 3101234567" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">Correo electr√≥nico</label>
                            <input asp-for="Email" class="form-control" placeholder="Ej: juan@hospital.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                            <button type="submit" class="btn btn-purple">üíæ Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-purple {
        background-color: #6f42c1 !important;
    }
    .btn-purple {
        background-color: #6f42c1;
        color: #fff;
    }
    .btn-purple:hover {
        background-color: #5b36a3;
        color: #fff;
    }
</style>

